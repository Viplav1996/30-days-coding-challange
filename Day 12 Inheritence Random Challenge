a = [ 1,2,3,0,-4,-5]

def prop(a):
    pos=0.0
    neg=0.0
    zero=0.0
    for i in range(0, len(a)):
        if (a[i]>0):
            pos+=1
        elif (a[i]<0):
            neg+=1
        else :
            zero+=1
    print("{0:.6f}".format(pos/len(a)))
    print("{0:.6f}".format(neg/len(a)))
    print("{0:.6f}".format(zero/len(a)))
    return

prop(a)
